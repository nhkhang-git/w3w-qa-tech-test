{
    "name": "w3w-qa-tech-test",
    "description": "w3w-qa-tech-test",
    "scripts": {
        "cypress:open": "cypress open --e2e",
        "test": "cypress run --e2e 'cypress/integration/e2e/**/*.feature'",
        "test:tags": "cypress run --e2e --spec 'cypress/integration/e2e/**/*.feature' --env tags=\"${TAGS:-@smoke}\"",
        "generate:report": "node scripts/generate-html-report.js",
        "test:ci": "npm run test:tags && npm run generate:report"
    },
    "author": "what3words",
    "devDependencies": {
        "cucumber-html-reporter": "^7.2.0",
        "cypress": "^14.3.0",
        "cypress-cucumber-preprocessor": "^4.3.1",
        "mochawesome": "^7.1.3",
        "mochawesome-merge": "^4.3.0",
        "mochawesome-report-generator": "^6.2.0",
        "multiple-cucumber-html-reporter": "^3.7.0"
    },
    "cypress-cucumber-preprocessor": {
        "cucumberJson": {
            "generate": true,
            "outputFolder": "cypress/reports/cucumber-json",
            "filePrefix": "",
            "fileSuffix": ".cucumber"
        }
    }
}